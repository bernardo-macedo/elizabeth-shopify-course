<section class=" flex flex-col justify-center px-10 md:px-44 bg-slate-900 h-screen">
  {% if section.settings.title != blank %}
    <h2 class="text-xl md:text-2xl mb-10 text-gray-100 uppercase">{{ section.settings.title }}</h2>
  {% endif %}

  {% form 'contact' %}
    {% if form.errors %}
      <div class="flex flex-row items-center w-full mb-4">
        <div class="text-red-500">
          {% render 'icon-error' %}
        </div>
        <div class="ml-3 text-gray-100">Your message was not sent.
          <ul class="text-gray-100">
            {% for error in form.errors %}
              <li>{{ form.errors.messages[error] }}</li>
            {% endfor %}
          </ul>
        </div>

      </div>

    {% elsif form.posted_successfully? %}
      <div class="flex flex-row items-center w-full mb-4">
        <div class="text-green-500">
          {% render 'icon-success' %}
        </div>
        <div class="ml-3 text-gray-100">Your message was sent! Thank you for contacting us</div>
      </div>
    {% endif %}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="text-gray-100 uppercase text-sm" for="contact_name">Name</label>
        <input
          type="text"
          name="contact[name]"
          id="contact_name"
          class="w-full p-2 border mt-2"
          placeholder="Name"
          required>
      </div>

      <div>
        <label class="text-gray-100 uppercase text-sm" for="contact_email">Email Address</label>
        <input
          class="w-full p-2 border mt-2"
          type="email"
          name="contact[email]"
          id="contact_email"
          placeholder="Email Address"
          required>
      </div>
    </div>
    <div class="w-full mt-4">
      <label class="text-gray-100 uppercase text-sm" for="contact_message">Message</label>
      <textarea
        class="w-full p-2 border mt-2 resize-none"
        name="contact[body]"
        id="contact_message"
        placeholder="Message"
        required></textarea>
    </div>

    <input
      type="submit"
      value="Submit message"
      class="w-full p-2 mt-2 bg-gray-500 text-white cursor-pointer hover:bg-gray-400">
  {% endform %}
</section>
{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Have some questions? Get in touch!",
        "label": "Title"
      }

    ],
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}